{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.MySQL", "Serilog.Exceptions" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/Info-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Json.JsonFormatter",
          "Args": {
            "expression": "@l = 'Info')"
          }
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/Warning-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Json.JsonFormatter",
          "restrictedToMinimumLevel": "Warning",
          "filter": "@Level = 'Warning'"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/Error-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Json.JsonFormatter",
          "restrictedToMinimumLevel": "Error",
          "filter": "@Level = 'Error'"
        }
      },
      {
        "Name": "MySQL",
        "Args": {
          "connectionString": "Server=localhost;Database=gokstad_athletics;User ID=ga-app;Password=ga-5ecret-%;",
          "tableName": "InfoLogs",
          "autoCreateSqlTable": true,
          "filter": "@Level = 'Information'"
        }
      },
      {
        "Name": "MySQL",
        "Args": {
          "connectionString": "Server=localhost;Database=gokstad_athletics;User ID=ga-app;Password=ga-5ecret-%;",
          "tableName": "WarningLogs",
          "autoCreateSqlTable": true,
          "filter": "@Level = 'Warning'"
        }
      },
      {
        "Name": "MySQL",
        "Args": {
          "connectionString": "Server=localhost;Database=gokstad_athletics;User ID=ga-app;Password=ga-5ecret-%;",
          "tableName": "ErrorLogs",
          "autoCreateSqlTable": true,
          "filter": "@Level = 'Error'"
        }
      },
      {
        "Name": "Console"
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=gokstad_athletics;User ID=ga-app;Password=ga-5ecret-%;"
  },
  "JWT": {
    "Key": "GokstadAkademietSandefjord2023-25",
    "Issuer": "GokstadFriidrettsforening",
    "Audience": "GokstadFriidrettsforeningMembers",
    "ExpireMinutes": 60
  }
}
